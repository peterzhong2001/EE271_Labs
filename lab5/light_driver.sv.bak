module light_driver (clk, calm, left, right, out, reset);
	input logic clk, calm, left, right, reset;
	output logic [2:0] out;
	
	// State variables
	enum { A, B, C, D } ps, ns;
	
	//Next State logic
	//A: 010; B: 100; C: 101; D: 001;
	always_comb begin
		case (ps)
			A: if (calm) ns = C;
				else if (left) ns = B;
				else ns = D;
			B: if (calm) ns = C;
				else if (left) ns = D;
				else ns = A;
			C: ns = A;
			D: if (calm) ns = C;
				else if (left) ns = A;
				else ns = B;
		endcase
	end
	
	// Output logic
	always_comb begin
		case (ps)
			A: if (calm) out = 3'b101;
				else if (left) out = 3'b100;
				else out = 3'b001;
			B: if (calm) out = 3'b101;
				else if (left) out = 3'b001;
				else out = 3'b010;
			C: out = 010;
			D: if (calm) out = 3'b101;
				else if (left) out = 3'b010;
				else out = 3'b100;
		endcase
	end
	
	// DFFs
	always_ff @(posedge clk) begin
		if (reset)
			ps <= A;
		else
			ps <= ns;
	end
endmodule 